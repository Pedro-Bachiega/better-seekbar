<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BetterSeekBar">
        <!--region Progress-->
        <attr name="initialProgress" format="float" />
        <!--endregion-->

        <!--region Graph's margins-->
        <attr name="graphMarginTop" format="dimension" />
        <!--endregion-->

        <!--region Segments-->
        <attr name="segments" format="integer" />
        <attr name="segmentResource" format="reference" />
        <attr name="segmentDivider" format="dimension" />
        <!--endregion-->

        <!--region Bar-->
        <attr name="barStrokeSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="barGlowEnabled" format="boolean" />
        <!--endregion-->

        <!--region Bar Indicator-->
        <attr name="barIndicatorEnabled" format="boolean" />
        <attr name="barIndicatorStrokeSize" format="dimension" />
        <attr name="barIndicatorColor" format="color" />
        <!--endregion-->

        <!--region Bar PointsIndicator-->
        <attr name="barIndicatorPointsEnabled" format="boolean" />
        <attr name="barIndicatorPointsContainerHeight" format="dimension" />
        <attr name="barIndicatorPointsContainerFormat" format="enum">
            <enum name="line" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <attr name="barIndicatorPointsColor" format="color" />
        <attr name="barIndicatorUnselectedPointsColor" format="color" />
        <attr name="barIndicatorArrowColor" format="color" />
        <!--endregion-->

        <!--region Highlight-->
        <attr name="minHighlightAlpha" format="float" />
        <attr name="maxHighlightAlpha" format="float" />
        <attr name="highlightColor" format="color" />
        <attr name="highlightEnabled" format="boolean" />
        <!--endregion-->

        <!--region Handler-->
        <attr name="handlerSize" format="dimension" />
        <attr name="handlerMarginStart" format="dimension" />
        <attr name="handlerMarginEnd" format="dimension" />
        <attr name="handlerColor" format="color" />
        <attr name="handlerResource" format="reference" />
        <!--endregion-->

        <!--region Haptic Feedback-->
        <attr name="android:hapticFeedbackEnabled" />
        <!--endregion-->
    </declare-styleable>

    <declare-styleable name="CurvedSeekBar">
        <!--region Points-->
        <attr name="anchorX1" format="float" />
        <attr name="anchorX2" format="float" />
        <attr name="anchorY1" format="float" />
        <attr name="anchorY2" format="float" />
        <attr name="finalY" format="float" />
        <attr name="finalX" format="float" />
        <!--endregion-->
    </declare-styleable>
</resources>